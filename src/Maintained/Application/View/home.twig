{% extends 'layout.twig' %}

{% block content %}

    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <img class="img-responsive" src="/img/dude.png" alt="">
                    <div class="intro-text">
                        <span class="name">Maintained</span>
                        <hr class="star-light">
                        <span class="skills">Check the activity of open source projects</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="check">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Check a project</h2>
                    <hr class="star-primary">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="input-group input-group-lg">
                        <input type="text" class="form-control" placeholder="user/repository">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-default">Search</button>
                        </span>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <section class="success" id="metrics">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Metrics</h2>
                    <hr class="star-light">
                </div>
            </div>

            <div class="row text-center">
                <div class="col-lg-4 col-lg-offset-2">
                    <h3>Resolution time</h3>
                    <p>
                        Median time needed to close an issue.
                    </p>
                </div>
                <div class="col-lg-4">
                    <h3>Closed percentage</h3>
                    <p>
                        Percentage of closed issues.
                    </p>
                </div>
            </div>

            <div class="row portfolio">
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="https://github.com/mnapoli/PHP-DI">
                            PHP-DI
                        </a>
                    </p>
                    <img src="/badge/mnapoli/PHP-DI.svg">
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="https://github.com/Ocramius/ProxyManager">
                            ProxyManager
                        </a>
                    </p>
                    <img src="/badge/Ocramius/ProxyManager.svg">
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="https://github.com/Atlantic18/DoctrineExtensions">
                            DoctrineExtensions
                        </a>
                    </p>
                    <img src="/badge/Atlantic18/DoctrineExtensions.svg">
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="https://github.com/schmittjoh/serializer">
                            JMS serializer
                        </a>
                    </p>
                    <img src="/badge/schmittjoh/serializer.svg">
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="https://github.com/PHPOffice/PHPExcel">
                            PHPExcel
                        </a>
                    </p>
                    <img src="/badge/PHPOffice/PHPExcel.svg">
                </div>
                <div class="col-sm-4 portfolio-item">
                    <p>
                        <a href="https://github.com/swiftmailer/swiftmailer">
                            Swift Mailer
                        </a>
                    </p>
                    <img src="/badge/swiftmailer/swiftmailer.svg">
                </div>
            </div>

        </div>
    </section>

    <section id="about">
        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>About</h2>
                    <hr class="star-primary">
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 col-lg-offset-2">
                    <p>
                        Maintained is an open source project whose goal is to monitor open source projects.
                    </p>
                </div>
                <div class="col-lg-4">
                    <p>
                        Have you ever wondered whether or not to use a library, uncertain of how
                        well it is maintained?
                    </p>
                </div>
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <a href="https://github.com/mnapoli/Maintained" class="btn btn-lg btn-default">
                        <i class="fa fa-github"></i> Fork on GitHub
                    </a>
                </div>
            </div>

        </div>
    </section>

{% endblock %}